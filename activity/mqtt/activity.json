{
  "name": "mqtt",
  "type": "flogo:activity",
  "ref": "github.com/jvanderl/flogo-components/activity/mqtt",
  "version": "0.0.1",
  "title": "Send MQTT Message",
  "description": "Pubishes message on MQTT topic",
  "author": "Jan van der Lugt <jvanderl@tibco.com>",
  "inputs":[
   {
      "name": "broker",
      "type": "string"
    },
    {
      "name": "id",
      "type": "string"
    },
    {
      "name": "user",
      "type": "string"
    },
    {
      "name": "password",
      "type": "string"
    },
    {
      "name": "topic",
      "type": "string"
    },
    {
      "name": "qos",
      "type": "integer",
      "allowed" : ["0", "1", "2"]
    },
    {
      "name": "message",
      "type": "string"
    }
  ],
  "outputs": [
    {
      "name": "result",
      "type": "string"
    }
  ]
}
