{
  "name": "blemaster",
  "type": "flogo:trigger",
  "ref": "github.com/jvanderl/flogo-components/trigger/blemaster",
  "version": "0.0.1",
  "title": "Receive BLE data (Master)",
  "description": "BLE Subscriber",
  "author": "Jan van der Lugt <jvanderl@tibco.com>",
  "homepage": "https://github.com/jvanderl/flogo-components/tree/master/trigger/blemaster",
  "settings":[
    {
      "name": "devicename",
      "type": "string"
    },
    {
      "name": "deviceid",
      "type": "string"
    },
    {
      "name": "devicecheck",
      "type": "boolean"
    },
    {
      "name": "autodisconnect",
      "type": "boolean"
    },
    {
      "name": "autoreconnect",
      "type": "boolean"
    },
    {
      "name": "reconnectinterval",
      "type": "integer"
    },
    {
      "name": "intervaltype",
      "type": "string",
      "allowed" : ["hours", "minutes", "seconds", "milliseconds"]
    }
  ],
  "outputs": [
    {
      "name": "notification",
      "type": "string"
    },
    {
      "name": "deviceid",
      "type": "string"
    },
    {
      "name": "localname",
      "type": "string"
    }
  ],
  "handler": {
    "settings": [
      {
        "name": "service",
        "type": "string"
      },
      {
        "name": "characteristic",
        "type": "string"
      }
    ]
  }
}
