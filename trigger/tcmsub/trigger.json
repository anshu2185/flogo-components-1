{
  "name": "tcmsub",
  "type": "flogo:trigger",
  "ref": "github.com/jvanderl/flogo-components/trigger/tcmsub",
  "version": "0.0.1",
  "title": "Receive TCM Message",
  "description": "TCM Subscriber",
