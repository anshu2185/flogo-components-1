{
  "name": "mqtt2",
  "type": "flogo:trigger",
  "ref": "github.com/jvanderl/flogo-components/trigger/mqtt2",
  "version": "0.0.1",
  "title": "Receive MQTT Message 2",
  "author": "Michael Register <mregiste@tibco.com>",
  "description": "MQTT Topic Subscriber",
  "settings":[
    {
      "name": "broker",
      "type": "string",
      "value": "tcp://127.0.0.1:1883"
    },
    {
      "name": "id",
      "type": "string",
      "value": "flogo-mqtt2-trigger"
    },
    {
      "name": "user",
      "type": "string",
      "value": ""
    },
    {
      "name": "password",
      "type": "string",
      "value": ""
    },
    {
      "name": "store",
      "type": "string",
      "value": ""
    },
    {
      "name": "qos",
      "type": "number",
      "value": "1"
    },
    {
      "name": "cleansess",
      "type": "boolean",
      "value": "false"
    }
  ],
  "outputs": [
    {
      "name": "message",
      "type": "string"
    },
    {
      "name": "actualtopic",
      "type": "string"
    }
  ],
  "handler": {
    "settings": [
      {
        "name": "topic",
        "type": "string"
      }
    ]
  }
}
